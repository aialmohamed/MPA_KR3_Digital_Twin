<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="600"             
             xmlns:vm ="clr-namespace:DigitalTwin.ViewModels"
             x:DataType="vm:HomeViewModel"
             xmlns:aura="using:Aura.UI"
             Background="{DynamicResource SecondaryBackground}"
             x:Class="DigitalTwin.Views.HomeView">
    <Grid  RowDefinitions="0.3*,*">
      <!--Header-->
      <Border Background="{DynamicResource SecondaryBackground}" Grid.Column="1" Grid.Row="0" >
        <StackPanel>
          <Image Source="{SvgImage /Assets/Images/Logo_Light.svg}" Height="100" Width="100" />
        </StackPanel>
      </Border>
      
      <!--Body-->
      <Border Background="{DynamicResource PrimaryGradient}" Grid.Column="1" Grid.Row="1" >
          <aura:CardView CornerRadius="10" Elevation="5" Background="White">
              <StackPanel>
                  <TextBlock Text="Hello, World!" FontSize="16" />
              </StackPanel>
          </aura:CardView>

      </Border>
    </Grid>
</UserControl>
